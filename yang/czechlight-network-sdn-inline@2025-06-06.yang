module czechlight-network-sdn-inline {
    yang-version 1.1;
    namespace "http://czechlight.cesnet.cz/yang/czechlight-network-sdn-inline";
    prefix cla-network-sdn-inline;

    import ietf-interfaces {
        prefix if;
    }

    import czechlight-network {
        prefix cla-network;
        revision-date 2025-06-06;
    }

    description
        "This module defines constraints for network interfaces in the
	 CzechLight SDN Inline Amplifier hardware.";

    revision 2025-06-06 {
        description "Initial release.";
    }

    deviation /if:interfaces/if:interface/if:name {
        deviate add {
            must '. = "br0" or . = "eth0" or . = "eth1" or . = "oscW" or . = "oscE" or . = "sfp3"' {
                error-message "Link name must be chosen from the following options: {br0, eth0, oscW, oscE, sfp3}.";
            }
        }
    }

    deviation /if:interfaces {
        deviate add {
            must 'interface[name = "br0"] and interface[name = "eth0"] and interface[name = "eth1"] and interface[name = "oscW"] and interface[name = "oscE"] and interface[name = "sfp3"]' {
                error-message "The following interfaces must be defined: br0, eth0, oscW, oscE, sfp3.";
            }
        }
    }
}
